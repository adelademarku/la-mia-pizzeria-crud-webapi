

@Model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli post</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.Image">
            </div>
            <p>
                <strong>Titolo:</strong>
                @Model.Name
            </p>
            <p>
                <strong>Contenuto:</strong>
                @Model.Description
            </p>
            <p>
                <strong>Categoria:</strong>
                @Model.Category.Name
            </p>
            <p>
                <strong>Prezzo:</strong>
                @Model.Price
            </p>
            <p>
                <strong>Ingredienti:</strong>
                @foreach (Ingrediente ingredienti in Model.Ingredienti)
                {
                    <div>
                        <label>@ingredienti.Title</label>
                    </div>
                }
            </p>
        </div>
    </div>
</div>
